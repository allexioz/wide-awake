      </div>
      
      {% if section.settings.background_image %}
        <div class="wholesale-image">
          <img src="{{ section.settings.background_image | image_url: width: 600 }}" 
               alt="{{ section.settings.background_image.alt | default: 'Coffee beans' }}"
               loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .wholesale-cta {
    background-color: #f8f5f1;
    padding: 80px 0;
    position: relative;
    overflow: hidden;
  }

  .wholesale-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(212, 165, 116, 0.05) 0%, rgba(44, 24, 16, 0.05) 100%);
    z-index: 0;
  }

  .wholesale-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }

  .wholesale-content {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 60px;
    align-items: start;
  }

  .wholesale-text {
    max-width: 100%;
  }

  .wholesale-title {
    font-size: 2.5rem;
    font-weight: 400;
    color: #2c1810;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    font-family: 'Special Gothic Expanded One' !important;
  }

  .wholesale-description {
    font-size: 1.2rem;
    color: #666;
    margin-bottom: 2rem;
    line-height: 1.6;
    font-family: 'Poppins' !important;
  }

  .wholesale-features {
    margin-bottom: 2rem;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .feature-icon {
    font-size: 2rem;
    width: 60px;
    height: 60px;
    background-color: #5CBFEE;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .feature-text h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2c1810;
    margin-bottom: 0.5rem;
    font-family: 'Poppins' !important;
  }

  .feature-text p {
    color: #666;
    font-size: 0.95rem;
    line-height: 1.4;
    font-family: 'Poppins' !important;
  }

  .shipping-info {
    background-color: white;
    padding: 24px;
    border-radius: 12px;
    border-left: 4px solid #5CBFEE;
    margin-bottom: 2rem;
  }

  .shipping-info h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2c1810;
    margin-bottom: 1rem;
    font-family: 'Poppins' !important;
  }

  .shipping-info ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .shipping-info li {
    padding: 0.5rem 0;
    color: #666;
    border-bottom: 1px solid #eee;
    font-family: 'Poppins' !important;
  }

  .shipping-info li:last-child {
    border-bottom: none;
  }

  .wholesale-actions {
    display: flex;
    gap: 1rem;
  }

  .btn {
    padding: 14px 32px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
    text-align: center;
    border: 2px solid transparent;
    font-family: 'Poppins' !important;
  }

  .btn-primary {
    background-color: #5CBFEE;
    color: white;
    border: 2px solid #5CBFEE;
    padding: 16px 32px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    border-radius: 6px;
    transition: all 0.3s ease;
    font-family: 'Poppins' !important;
  }

  .btn-primary:hover {
    background-color: rgba(92, 191, 238, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(92, 191, 238, 0.3);
    font-family: 'Poppins' !important;
  }

  .wholesale-image {
    position: relative;
  }

  .wholesale-image img {
    width: 100%;
    height: auto;
    border-radius: 16px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .wholesale-cta {
      padding: 60px 0;
    }

    .wholesale-content {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .wholesale-title {
      font-size: 2rem;
    }

    .wholesale-description {
      font-size: 1.1rem;
    }

    .wholesale-features {
      text-align: left;
    }

    .feature-item {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .wholesale-title {
      font-size: 1.75rem;
    }

    .feature-item {
      flex-direction: column;
      text-align: center;
    }

    .btn {
      padding: 12px 24px;
      font-size: 0.9rem;
    }
  }

  .info-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 16px;
    padding-left: 20px;
    position: relative;
    border-left: 4px solid #5CBFEE;
    font-family: 'Poppins' !important;
  }

  .btn-secondary {
    background-color: transparent;
    color: #2c1810;
    border: 2px solid #2c1810;
    padding: 12px 24px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    border-radius: 6px;
    transition: all 0.3s ease;
    font-family: 'Poppins' !important;
  }

  .btn-secondary:hover {
    background-color: #5CBFEE;
    border-color: #5CBFEE;
    color: white;
    font-family: 'Poppins' !important;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Wholesale CTA",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Let Wide Awake be your coffee bean supplier"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Let us know your wholesale needs and we'd be happy to accommodate you and your business!"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "checkbox",
      "id": "show_features",
      "label": "Show Features",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_shipping_info",
      "label": "Show Shipping Information",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Learn more about wholesale"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Wholesale CTA",
      "category": "Content"
    }
  ]
}
{% endschema %} 