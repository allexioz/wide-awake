<footer class="site-footer" role="contentinfo" aria-label="Site footer">
  <div class="footer-container">
    <!-- Main Footer Content -->
    <div class="footer-main">
      <!-- Brand Section -->
      <div class="footer-section footer-brand">
        <div class="footer-logo">
          <img src="{{ 'WideAwake_Logo_Horizontal_White.png' | asset_url }}" 
               alt="{{ shop.name }}" 
               class="footer-logo-img"
               loading="lazy"
               width="200"
               height="auto">
        </div>
        <p class="footer-description">
          {{ section.settings.footer_description | default: "Specialty coffee sourced from quality driven producers. Roasted with passion and precision." }}
        </p>
        
        {% if section.settings.show_shipping_info %}
          <div class="shipping-info">
            <h3 class="shipping-title">Shipping Information</h3>
            <div class="shipping-grid">
              <div class="shipping-item">
                <span class="shipping-location">Metro Manila</span>
                <span class="shipping-price">‚Ç±100</span>
              </div>
              <div class="shipping-item">
                <span class="shipping-location">Nationwide</span>
                <div class="shipping-details">
                  <span class="shipping-price">‚Ç±100</span>
                  <small class="shipping-note">Min. order ‚Ç±1,000</small>
                </div>
              </div>
              <div class="shipping-item">
                <span class="shipping-location">Regular Rate</span>
                <span class="shipping-price">‚Ç±200</span>
              </div>
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Navigation Links -->
      <div class="footer-section footer-links">
        <h3 class="footer-heading">Shop</h3>
        {% assign primary_menu_handle = section.settings.primary_menu | default: 'main-menu' %}
        {% assign primary_menu = linklists[primary_menu_handle] %}
        {% if primary_menu.links.size > 0 %}
          <nav class="footer-nav" aria-label="Footer navigation">
            <ul class="footer-nav-list">
              {% for link in primary_menu.links %}
                <li class="footer-nav-item">
                  <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        {% endif %}
      </div>

      <!-- Contact Information -->
      <div class="footer-section footer-contact">
        <h3 class="footer-heading">Get in Touch</h3>
        <div class="contact-info">
          {% if section.settings.contact_email != blank %}
            <div class="contact-item">
              <span class="contact-icon">üìß</span>
              <div class="contact-details">
                <span class="contact-label">Email</span>
                <a href="mailto:{{ section.settings.contact_email }}" class="contact-link">
                  {{ section.settings.contact_email }}
                </a>
              </div>
            </div>
          {% endif %}
          {% if section.settings.contact_phone != blank %}
            <div class="contact-item">
              <span class="contact-icon">üìû</span>
              <div class="contact-details">
                <span class="contact-label">Phone</span>
                <a href="tel:{{ section.settings.contact_phone | replace: ' ', '' }}" class="contact-link">
                  {{ section.settings.contact_phone }}
                </a>
              </div>
            </div>
          {% endif %}
          {% if section.settings.contact_address != blank %}
            <div class="contact-item">
              <span class="contact-icon">üìç</span>
              <div class="contact-details">
                <span class="contact-label">Visit Us</span>
                <span class="contact-text">{{ section.settings.contact_address }}</span>
              </div>
            </div>
          {% endif %}
          {% if section.settings.roast_schedule != blank %}
            <div class="contact-item">
              <span class="contact-icon">‚òï</span>
              <div class="contact-details">
                <span class="contact-label">Roast Days</span>
                <span class="contact-text">{{ section.settings.roast_schedule }}</span>
              </div>
            </div>
          {% endif %}
        </div>
      </div>

      <!-- Newsletter & Social -->
      <div class="footer-section footer-newsletter">
        <h3 class="footer-heading">Stay in the Loop</h3>
        
        {% if false and section.settings.show_newsletter %}
          <div class="newsletter-wrapper">
            <p class="newsletter-description">Get the freshest updates on new roasts, brewing tips, and exclusive offers.</p>
            {% form 'customer', class: 'newsletter-form' %}
              <div class="newsletter-input-group">
                <label for="newsletter-email" class="visually-hidden">Email address</label>
                <input 
                  type="email" 
                  id="newsletter-email"
                  name="contact[email]" 
                  placeholder="Your email address" 
                  class="newsletter-input"
                  required
                  aria-describedby="newsletter-description"
                >
                <button type="submit" class="newsletter-btn" aria-label="Subscribe to newsletter">
                  <span class="btn-text">Subscribe</span>
                  <span class="btn-icon">‚Üí</span>
                </button>
              </div>
              <input type="hidden" name="contact[tags]" value="newsletter">
            {% endform %}
          </div>
        {% endif %}
        
        {% if section.settings.show_social_links %}
          <div class="social-section">
            <h4 class="social-heading">Follow Our Journey</h4>
            <ul class="social-list">
              {% if section.settings.facebook_url != blank %}
                <li>
                  <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Follow us on Facebook">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                  </a>
                </li>
              {% endif %}
              {% if section.settings.instagram_url != blank %}
                <li>
                  <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Follow us on Instagram">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
