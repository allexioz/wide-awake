  // Enhanced search with complete Shopify data
  async function performSearch(query) {
    try {
      // Animate out suggestions
      anime({
        targets: suggestionsContainer,
        opacity: [1, 0],
        translateY: [0, -20],
        duration: 200,
        easing: 'easeInQuart',
