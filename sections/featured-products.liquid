    margin-bottom: 60px;
  }

  .product-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.2s cubic-bezier(0.4, 0.0, 0.2, 1), box-shadow 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
    will-change: transform;
  }

  .product-card:hover {
    transform: translate3d(0, -5px, 0);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .product-image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1;
    will-change: transform;
  }

  /* Quick View Button */
  .product-quick-view-btn {
    position: absolute;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%) translateY(100%);
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(92, 191, 238, 0.2);
    border-radius: 12px;
    padding: 8px 16px;
    font-family: 'Poppins', sans-serif;
    font-size: 0.8rem;
    font-weight: 600;
    color: #5CBFEE;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    gap: 6px;
    opacity: 0;
    pointer-events: none;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    z-index: 2;
  }

  .product-card:hover .product-quick-view-btn {
    transform: translateX(-50%) translateY(0);
    opacity: 1;
    pointer-events: auto;
  }

  .product-quick-view-btn:hover {
    background: rgba(92, 191, 238, 0.1);
    border-color: rgba(92, 191, 238, 0.4);
    transform: translateX(-50%) translateY(-2px);
