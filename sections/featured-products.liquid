  .product-card.touch-active {
    transform: translate3d(0, -3px, 0) scale(0.98);
  }

  .product-card.hover-effect .product-image img {
    transform: scale3d(1.04, 1.04, 1);
  }

  /* Loading state shimmer */
  @keyframes shimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
  }

  .product-image:not(:has(img[src])) {
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite;
  }

  /* Responsive performance optimizations */
  @media (max-width: 768px) {
    .product-card {
      transition-duration: 0.15s;
    }
    
    .product-card:hover {
      transform: translate3d(0, -3px, 0);
    }
    
    .product-card:hover .product-image img {
      transform: scale3d(1.02, 1.02, 1);
    }
  }

  @media (max-width: 480px) {
    .products-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Quick View Modal Styles */
  .quick-view-overlay {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    background: rgba(0, 0, 0, 0) !important;
    backdrop-filter: blur(0px) !important;
    z-index: 9999 !important;
    display: none !important;
    align-items: center !important;
    justify-content: center !important;
    padding: 20px !important;
    opacity: 0 !important;
    visibility: hidden !important;
    transition: opacity 0.15s ease, backdrop-filter 0.2s ease !important;
    contain: layout style paint !important;
    transform: translate3d(0, 0, 0) !important;
    will-change: opacity, backdrop-filter !important;
  }

  .quick-view-overlay[style*="display: flex"] {
    display: flex !important;
    visibility: visible !important;
  }

  .quick-view-overlay.active {
    opacity: 1 !important;
    visibility: visible !important;
    background: rgba(0, 0, 0, 0.6) !important;
    backdrop-filter: blur(12px) !important;
  }

  /* Choreographed exit animations */
  .quick-view-overlay.closing {
    opacity: 0 !important;
    transition: opacity 0.25s ease !important;
  }

  .quick-view-overlay.closing .quick-view-modal {
    transform: scale(0.95) translate3d(0, 20px, 0) !important;
    transition: transform 0.25s cubic-bezier(0.55, 0.085, 0.68, 0.53) !important;
  }

  /* Staggered exit choreography */
  .quick-view-overlay.closing .quick-view-details-link {
    animation: fadeOutDown 0.2s ease forwards;
  }

  .quick-view-overlay.closing .quick-view-buttons {
    animation: slideOutDown 0.2s ease 0.05s forwards;
  }

  .quick-view-overlay.closing .quick-view-quantity {
    animation: slideOutRight 0.2s ease 0.1s forwards;
  }

  .quick-view-overlay.closing .quick-view-price {
    animation: slideOutRight 0.2s ease 0.12s forwards;
  }

  .quick-view-overlay.closing .quick-view-title {
    animation: slideOutRight 0.2s ease 0.15s forwards;
  }

  .quick-view-overlay.closing .quick-view-image-container {
    animation: slideOutLeft 0.25s ease 0.1s forwards;
  }

  .quick-view-overlay.closing .quick-view-close {
    animation: scaleOut 0.15s ease forwards;
  }

  /* Exit keyframes */
  @keyframes fadeOutDown {
    to {
      opacity: 0;
      transform: translate3d(0, 15px, 0);
    }
  }

  @keyframes slideOutDown {
    to {
      opacity: 0;
      transform: translate3d(0, 25px, 0) scale3d(0.95, 0.95, 1);
    }
  }

  @keyframes slideOutRight {
    to {
      opacity: 0;
      transform: translate3d(30px, 0, 0);
    }
  }

  @keyframes slideOutLeft {
    to {
      opacity: 0;
      transform: translate3d(-40px, 0, 0) scale3d(0.95, 0.95, 1);
    }
  }

  @keyframes scaleOut {
    to {
      opacity: 0;
      transform: scale3d(0.3, 0.3, 1);
    }
  }

