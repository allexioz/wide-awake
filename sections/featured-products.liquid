{% comment %}
  Wide Awake Featured Products Section
{% endcomment %}

<section class="featured-products">
  <div class="container">
    {% if section.settings.section_title != blank %}
      <div class="section-header">
        <h2 class="section-title">{{ section.settings.section_title }}</h2>
        {% if section.settings.section_subtitle != blank %}
          <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.settings.featured_collection != blank %}
      <div class="products-grid">
        {% assign featured_collection = collections[section.settings.featured_collection] %}
        {% for product in featured_collection.products limit: section.settings.products_to_show %}
          <div class="product-card">
            <div class="product-image">
              {% if product.featured_image %}
                <a href="{{ product.url }}">
                  <img src="{{ product.featured_image | image_url: width: 400 }}" 
                       alt="{{ product.featured_image.alt | default: product.title }}"
                       loading="lazy">
                </a>
                
                <!-- Quick View Button -->
                <button class="quick-view-btn product-quick-view-btn"
                        data-product-id="{{ product.id }}"
                        data-product-handle="{{ product.handle }}"
                        data-product-title="{{ product.title }}"
                        data-product-vendor="{{ product.vendor }}"
                        data-product-image="{{ product.featured_image | image_url: width: 600 }}"
                        data-product-price="{{ product.price }}"
                        data-product-compare-price="{{ product.compare_at_price }}"
                        data-product-url="{{ product.url }}"
                        aria-label="Quick view {{ product.title }}">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                    <circle cx="12" cy="12" r="3"></circle>
                  </svg>
                  Quick View
                </button>
              {% endif %}
            </div>
            <div class="product-info">
              <h3 class="product-title">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>
              <div class="product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="price-sale">{{ product.price | money }}</span>
                  <span class="price-regular">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span class="price">{{ product.price | money }}</span>
                {% endif %}
              </div>
              {% if product.description != blank %}
                <p class="product-description">{{ product.description | strip_html | truncate: 100 }}</p>
              {% endif %}
              <div class="product-actions">
                <a href="{{ product.url }}" class="btn btn-outline">View Details</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      {% if section.settings.show_view_all %}
        <div class="section-footer">
          <a href="{{ featured_collection.url }}" class="btn btn-primary btn-large">
            {{ section.settings.view_all_text | default: "View All Coffee" }}
          </a>
        </div>
      {% endif %}
    {% endif %}
  </div>
</section>

{% comment %} Quick View Modal for Featured Products {% endcomment %}
<div id="quickViewModal" class="quick-view-overlay" style="display: none;">
  <div class="quick-view-modal">
    <div class="quick-view-content">
      <!-- Close Button -->
      <button class="quick-view-close" onclick="closeQuickView()" aria-label="Close quick view">×</button>

      <!-- Product Image Section -->
      <div class="quick-view-image-section">
        <div class="quick-view-image-container">
          <img id="quickViewImage" src="" alt="" class="quick-view-image">
        </div>
      </div>

      <!-- Product Details Section -->
      <div class="quick-view-details-section">
        <div class="quick-view-header">
          <p class="quick-view-vendor quick-view-subtitle" id="quickViewVendor">QUICK VIEW</p>
          <h2 class="quick-view-title" id="quickViewTitle">Product Name</h2>
          <div class="quick-view-price" id="quickViewPrice">
            <span class="price-current">₱0.00</span>
          </div>
        </div>

        <form class="quick-view-form" id="quickViewForm">
          <!-- Quantity Selector -->
          <div class="quantity-section quick-view-quantity">
            <label class="quantity-label">Quantity</label>
            <div class="quantity-controls">
              <button type="button" class="quantity-btn quantity-decrease" onclick="updateQuantity(-1)">−</button>
              <input type="number" class="quantity-input" id="quickViewQuantity" value="1" min="1" max="99">
              <button type="button" class="quantity-btn quantity-increase" onclick="updateQuantity(1)">+</button>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="quick-view-actions quick-view-buttons">
            <button type="submit" class="btn-add-to-cart quick-view-btn btn-primary">
              ADD TO CART
            </button>
            <button type="button" class="btn-buy-now quick-view-btn btn-secondary">
              BUY IT NOW
            </button>
          </div>
        </form>

        <!-- View Full Details Link -->
        <div class="view-details-section">
          <a href="#" class="view-details-link quick-view-details-link" id="quickViewDetailsLink">
            VIEW FULL DETAILS
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .featured-products {
