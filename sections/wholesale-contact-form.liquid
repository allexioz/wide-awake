{% comment %}
  Wholesale Contact Form Section
  Reuses page.liquid styling; to be placed after main page content.
{% endcomment %}

<div class="page-content wholesale-contact-card">
  <div class="page-content-inner">
    <h2>Wholesale Enquiry</h2>
    <p>Tell us about your business and coffee needs and we'll respond within one business day.</p>

    {% form 'contact', id: 'WholesaleContactForm' %}
      {% if form.posted_successfully? %}
        <p class="form-success">Thanks for reaching out! We'll reply soon.</p>
      {% endif %}

      {% if form.errors %}
        <ul class="form-errors" role="alert">
          {% for field in form.errors %}
            <li>{{ field }} - {{ form.errors[field] }}</li>
          {% endfor %}
        </ul>
      {% endif %}

      <div class="form-field">
        <label for="wholesaleName" class="form-label">Name</label>
        <input type="text" id="wholesaleName" name="contact[name]" required value="{{ form.name }}" class="form-input">
      </div>

      <div class="form-field">
        <label for="wholesaleEmail" class="form-label">Email</label>
        <input type="email" id="wholesaleEmail" name="contact[email]" required value="{{ form.email }}" class="form-input">
      </div>

      <div class="form-field">
        <label for="wholesaleMessage" class="form-label">Message</label>
        <textarea id="wholesaleMessage" name="contact[body]" rows="6" required class="form-textarea">{{ form.body }}</textarea>
      </div>

      <input type="hidden" name="contact[tags]" value="wholesale,lead">
      <input type="hidden" name="contact[recipient]" value="wideawakeph@gmail.com">

      <button type="submit" class="btn btn-primary">Send enquiry</button>
    {% endform %}
  </div>
</div>

<style>
/* ====================================================
  WHOLESALE CONTACT FORM â€“ Enhanced Styling
  Inherits overall page typography but strengthens
  inputs, labels and CTA button for better visual fit
==================================================== */

#WholesaleContactForm {
  /* ensure consistent spacing */
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

#WholesaleContactForm .form-field {
  display: flex;
  flex-direction: column;
}

#WholesaleContactForm .form-label {
  font-weight: 600;
  color: var(--color-secondary, #2c1810);
  margin-bottom: 0.5rem;
  font-size: 1rem;
}

#WholesaleContactForm input,
#WholesaleContactForm textarea {
  border: 2px solid rgba(92, 191, 238, 0.2);
  border-radius: 12px;
  font-family: var(--font-primary--family, 'Poppins', sans-serif);
  font-size: 1rem;
  padding: 14px 18px;
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
  resize: vertical;
}

#WholesaleContactForm input:focus,
#WholesaleContactForm textarea:focus {
  outline: none;
  border-color: #5CBFEE;
  box-shadow: 0 0 0 3px rgba(92, 191, 238, 0.25);
}

#WholesaleContactForm textarea {
  min-height: 140px;
}

#WholesaleContactForm .btn-primary {
  background: linear-gradient(135deg, #5CBFEE 0%, #4A9CDB 100%);
  color: #fff;
  width: 100%;
  padding: 16px 24px;
  font-size: 1rem;
  font-weight: 700;
  border: none;
  border-radius: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

#WholesaleContactForm .btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(92, 191, 238, 0.35);
}

/* Success & error boxes inherit but adjust colors for clarity */
#WholesaleContactForm .form-success {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
  border-left: 4px solid #28a745;
  border-radius: 10px;
  padding: 12px 16px;
  font-weight: 600;
}

#WholesaleContactForm .form-errors {
  background: rgba(220, 53, 69, 0.08);
  color: #dc3545;
  border-left: 4px solid #dc3545;
  border-radius: 10px;
  padding: 12px 16px;
  list-style: none;
}

#WholesaleContactForm .form-errors li {
  margin-bottom: 0.5rem;
}

/* Wholesale contact card width */
.wholesale-contact-card {
  /* Constrain card width */
  margin: 3rem auto 0;
  max-width: 720px; /* keeps within reading width */
}
</style>

