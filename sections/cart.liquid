  // Quantity adjustment with debouncing
  function adjustQuantity(button, change) {
    const line = button.dataset.line;
    const input = document.querySelector(`input[data-line="${line}"]`);
    
    if (!input) {
      console.error('Could not find input for line:', line);
      showCartToast('Error: Could not find quantity input', 'error');
      return;
    }
    
    const currentQuantity = parseInt(input.value) || 0;
    const newQuantity = Math.max(0, currentQuantity + change);
    
    if (newQuantity !== currentQuantity) {
      // Update the visual immediately for better UX
      input.value = newQuantity;
      
      // Add visual feedback
      input.style.background = '#e8f5e8';
      input.style.transition = 'background 0.3s ease';
      
      setTimeout(() => {
        input.style.background = '';
      }, 500);
      
      // Store the pending update
      pendingUpdates.set(line, newQuantity);
      
      // Clear existing timeout
      if (updateTimeout) {
        clearTimeout(updateTimeout);
      }
      
      // Debounce the actual update
      updateTimeout = setTimeout(() => {
        processPendingUpdates();
      }, 800); // Wait 800ms after last change
      
      showCartToast('Quantity updated. Changes will save automatically...', 'info');
    }
  }

  // Process all pending updates at once
  function processPendingUpdates() {
    if (isUpdating || pendingUpdates.size === 0) {
      return;
