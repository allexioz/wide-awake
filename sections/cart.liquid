    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    padding: 60px 20px;
  }

  .empty-cart-content {
    background: white;
    border-radius: 24px;
    padding: 60px 40px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
