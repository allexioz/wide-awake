    display: flex;
    gap: 24px;
  }

  .cart-layout {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 60px;
    align-items: start;
  }

  /* Cart Items */
  .cart-items {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .cart-item {
    background: white;
    border-radius: 16px;
    padding: 24px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 20px;
    transition: all 0.3s ease;
  }

  .cart-item:hover {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
