    console.log('Processing pending updates:', pendingUpdates);
    
    // Get the first update to process
    const [line, quantity] = pendingUpdates.entries().next().value;
    pendingUpdates.delete(line);
    
    // Update this line item
    updateCartItem(line, quantity);
  }

