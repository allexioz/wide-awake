  // Update cart via AJAX
  function updateCartItem(line, quantity) {
    // Set global flag to prevent conflicts
    window.cartPageUpdating = true;
    showCartLoadingState();
    
    console.log('Updating line:', line, 'to quantity:', quantity);
    
    // Get the cart form
    const cartForm = document.getElementById('cart-form');
    if (!cartForm) {
      console.error('Cart form not found');
      window.cartPageUpdating = false;
      hideCartLoadingState();
      return;
    }
    
    // Get the specific input for this line
    const input = document.querySelector(`input[data-line="${line}"]`);
    if (!input) {
      console.error('Input not found for line:', line);
      window.cartPageUpdating = false;
      hideCartLoadingState();
      return;
    }
    
    // Update the input value
    input.value = quantity;
    
    // Create FormData from the actual cart form
    const formData = new FormData(cartForm);
    
    // Use Shopify's cart route
    fetch(cartForm.action, {
      method: 'POST',
      body: formData,
      headers: {
        'X-Requested-With': 'XMLHttpRequest'
      }
    })
    .then(response => {
      console.log('Cart update response status:', response.status);
      
      if (response.ok) {
        // If it's a successful form submission, Shopify returns HTML
        // We need to get the cart state via the cart.js API
        return fetch('/cart.js');
      } else {
        throw new Error(`HTTP error! status: ${response.status}`);
      }
    })
    .then(response => response.json())
    .then(cart => {
      console.log('Cart state retrieved:', cart);
      
      // Update the stored original value to the new quantity
      input.setAttribute('data-original-value', quantity);
      
      if (quantity === 0) {
        // Reload page for item removal to update layout
        window.location.reload();
      } else {
        refreshCartPageDisplay(cart);
        showCartToast('Cart updated successfully', 'success');
      }
    })
    .catch(error => {
      console.error('Cart update failed:', error);
      
      // Fallback: trigger the form submission manually
      showCartToast('Updating cart...', 'info');
      setTimeout(() => {
        cartForm.submit();
      }, 500);
    })
    .finally(() => {
      window.cartPageUpdating = false;
      hideCartLoadingState();
    });
  }

