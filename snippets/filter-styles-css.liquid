/* Filter Sections */
.filter-section {
  margin-bottom: 16px;
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 32px;
}

.filter-section:last-child {
  margin-bottom: 0;
}

/* Filter Header with Clear Link */
.filter-header {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 16px;
}

.clear-all-filters-link {
  background: none !important;
  border: none !important;
  outline: none !important;
  color: #6B7280;
  font-size: 0.85rem;
  font-weight: 500;
  cursor: pointer;
  padding: 4px 8px;
  border-radius: 4px;
  transition: all 0.2s ease;
  font-family: 'Poppins', sans-serif;
  text-decoration: none;
}

.clear-all-filters-link:hover {
  color: #374151;
  background: rgba(0, 0, 0, 0.04);
}

.filter-section-title {
  font-family: 'Poppins', sans-serif;
  font-size: 0.85rem;
  font-weight: 600;
  color: #495057;
  margin-bottom: 10px;
}

/* Enhanced Filter Groups */
.filter-section .filter-group,
.filter-group {
  margin-bottom: 0 !important;
  padding-top: 16px !important;
  padding-right: 16px !important;
  padding-bottom: 24px !important;
  padding-left: 16px !important;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 249, 250, 0.8) 100%);
  border-radius: 16px;
  border: 1px solid rgba(92, 191, 238, 0.15);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.04);
  backdrop-filter: blur(20px);
}



.filter-group-title {
  font-family: 'Poppins', sans-serif;
  font-size: 1.1rem;
  font-weight: 800;
  color: #2c1810;
  margin: 0 0 20px 0;
  display: flex;
  align-items: center;
  gap: 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.filter-group-title::before {
  content: '';
  width: 6px;
  height: 24px;
  background: linear-gradient(135deg, #5CBFEE 0%, #4A9CDB 100%);
  border-radius: 3px;
  box-shadow: 0 2px 8px rgba(92, 191, 238, 0.3);
}



/* Category Filter Tabs - Premium Design */
.filter-tabs {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
  padding-bottom: 10px;
}

.filter-tab {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 249, 250, 0.9) 100%) !important;
  border: 2px solid rgba(92, 191, 238, 0.12) !important;
  border-radius: 20px !important;
  padding: 0 !important;
  font-family: 'Poppins', sans-serif !important;
  cursor: pointer !important;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1) !important;
  color: #2c1810 !important;
  min-width: 130px !important;
  overflow: hidden !important;
  position: relative !important;
  backdrop-filter: blur(20px) !important;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06) !important;
  transform: translateY(0) !important;
}

.filter-tab::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.5s ease;
}

.filter-tab:hover::before {
  left: 100%;
}

.tab-content {
  display: flex !important;
  align-items: center !important;
  gap: 10px !important;
  padding: 14px 18px !important;
  position: relative !important;
  z-index: 1 !important;
}

.tab-icon {
  width: 18px;
  height: 18px;
  stroke-width: 2.5;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.tab-text-group {
  display: flex;
  align-items: center;
  gap: 6px;
  flex: 1;
}

.tab-text {
  font-weight: 600;
  font-size: 0.85rem;
  white-space: nowrap;
  letter-spacing: 0.02em;
  transition: all 0.3s ease;
}

.tab-count {
  background: rgba(92, 191, 238, 0.12);
  color: #4A9CDB;
  padding: 4px 8px;
  border-radius: 10px;
  font-size: 0.75rem;
  font-weight: 700;
  min-width: 20px;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 2px 8px rgba(92, 191, 238, 0.1);
}

/* Zero count styling */
.filter-tab .tab-count:empty::after {
  content: "0";
}

.filter-tab:has(.tab-count:empty) {
  opacity: 0.5;
  pointer-events: none;
}

.filter-tab .tab-count:empty,
.filter-tab .tab-count[data-count="0"] {
  background: rgba(156, 163, 175, 0.12);
  color: #6B7280;
}

.filter-tab:hover {
  border-color: rgba(92, 191, 238, 0.3) !important;
  background: linear-gradient(135deg, rgba(255, 255, 255, 1) 0%, rgba(248, 249, 250, 0.95) 100%) !important;
  color: #2c1810 !important;
  transform: translateY(-3px) !important;
  box-shadow: 0 12px 40px rgba(92, 191, 238, 0.2) !important;
}

.filter-tab:hover .tab-icon {
  color: #4A9CDB;
  transform: scale(1.1);
}

.filter-tab:hover .tab-count {
  background: rgba(92, 191, 238, 0.18);
  color: #4A9CDB;
  transform: scale(1.05);
}

/* Active state for filter tabs */
.filter-tab.active {
  background: linear-gradient(135deg, #5CBFEE 0%, #4A9CDB 100%) !important;
  color: white !important;
  border-color: transparent !important;
  transform: translateY(-3px) scale(1.02) !important;
  box-shadow: 0 16px 48px rgba(92, 191, 238, 0.45) !important;
}

.filter-tab.active .tab-icon {
  color: white;
  transform: scale(1.1);
}

.filter-tab.active .tab-text {
  color: white;
  font-weight: 700;
}

.filter-tab.active .tab-count {
  background: rgba(255, 255, 255, 0.25);
  color: white;
  font-weight: 800;
  transform: scale(1.05);
}

/* Category Segment Active States - Distinct Colors */
.filter-tab[data-filter="all"].active,
.filter-tabs .filter-tab[data-filter="all"].active {
  background: linear-gradient(135deg, #5CBFEE 0%, #4A9CDB 100%) !important;
  box-shadow: 0 12px 32px rgba(92, 191, 238, 0.4) !important;
}

.filter-tab[data-filter="daily-driver"].active,
.filter-tabs .filter-tab[data-filter="daily-driver"].active {
  background: linear-gradient(135deg, #FF9500 0%, #FF6B35 100%) !important;
  box-shadow: 0 12px 32px rgba(255, 149, 0, 0.4) !important;
}

.filter-tab[data-filter="premium-brews"].active,
.filter-tabs .filter-tab[data-filter="premium-brews"].active {
  background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%) !important;
  box-shadow: 0 12px 32px rgba(139, 92, 246, 0.4) !important;
}

.filter-tab[data-filter="direct-trade"].active,
.filter-tabs .filter-tab[data-filter="direct-trade"].active {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%) !important;
  box-shadow: 0 12px 32px rgba(16, 185, 129, 0.4) !important;
}

.filter-tab[data-filter="equipment"].active,
.filter-tabs .filter-tab[data-filter="equipment"].active {
  background: linear-gradient(135deg, #6B7280 0%, #4B5563 100%) !important;
  box-shadow: 0 12px 32px rgba(107, 114, 128, 0.4) !important;
}

/* Taste Profile Vibe Active States - Coffee-Inspired Colors */
.filter-tab[data-vibe="smooth-sweet"].active,
.filter-tabs .filter-tab[data-vibe="smooth-sweet"].active {
  background: linear-gradient(135deg, #D97706 0%, #B45309 100%) !important;
  box-shadow: 0 12px 32px rgba(217, 119, 6, 0.4) !important;
}

.filter-tab[data-vibe="light-bright"].active,
.filter-tabs .filter-tab[data-vibe="light-bright"].active {
  background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%) !important;
  box-shadow: 0 12px 32px rgba(245, 158, 11, 0.4) !important;
}

.filter-tab[data-vibe="complex-expressive"].active,
.filter-tabs .filter-tab[data-vibe="complex-expressive"].active {
  background: linear-gradient(135deg, #7C2D12 0%, #92400E 100%) !important;
  box-shadow: 0 12px 32px rgba(124, 45, 18, 0.4) !important;
}

/* Wide Awake Design System - Sophisticated Filter Pills */
.compact-filters {
  margin-bottom: 24px;
  padding: 20px;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16px;
  border: 1px solid rgba(229, 229, 229, 0.3);
  backdrop-filter: blur(20px);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.06);
}

.filter-pills {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
  justify-content: center;
}

.filter-pill {
  display: inline-flex !important;
  align-items: center !important;
  gap: 10px !important;
  background: rgba(255, 255, 255, 0.9) !important;
  border: 1px solid rgba(92, 191, 238, 0.15) !important;
  border-radius: 24px !important;
  padding: 14px 20px !important;
  cursor: pointer !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  font-family: 'Poppins', sans-serif !important;
  font-size: 0.9rem !important;
  font-weight: 600 !important;
  color: #1a1a1a !important;
  white-space: nowrap !important;
  position: relative !important;
  overflow: hidden !important;
  backdrop-filter: blur(10px) !important;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05) !important;
}

.filter-pill::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(92, 191, 238, 0.05) 0%, rgba(230, 152, 59, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
}

.pill-icon {
  width: 18px;
  height: 18px;
  stroke-width: 2;
  color: #5CBFEE;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.pill-text {
  font-weight: 600;
  flex: 1;
  letter-spacing: -0.01em;
}

.pill-count {
  background: rgba(92, 191, 238, 0.1);
  color: #5CBFEE;
  padding: 4px 10px;
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 700;
  font-family: 'Special Gothic Expanded One', monospace;
  line-height: 1;
  min-width: 24px;
  text-align: center;
  transition: all 0.3s ease;
}

.filter-pill:hover {
  border-color: rgba(92, 191, 238, 0.3);
  background: rgba(255, 255, 255, 1) !important;
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08) !important;
}

.filter-pill:hover::before {
  opacity: 1;
}

.filter-pill:hover .pill-icon {
  color: #4A9CDB;
  transform: scale(1.1);
}

.filter-pill:hover .pill-count {
  background: rgba(92, 191, 238, 0.15);
  transform: scale(1.05);
}

.filter-pill.active {
  background: linear-gradient(135deg, #5CBFEE 0%, #E6983B 100%) !important;
  color: white !important;
  border-color: transparent !important;
  transform: translateY(-2px) !important;
  box-shadow: 0 12px 32px rgba(92, 191, 238, 0.4) !important;
}

.filter-pill.active::before {
  opacity: 0;
}

.filter-pill.active .pill-icon {
  color: white;
  transform: scale(1.1);
}

.filter-pill.active .pill-text {
  color: white;
  font-weight: 700;
}

.filter-pill.active .pill-count {
  background: rgba(255, 255, 255, 0.25);
  color: white;
  font-weight: 800;
  transform: scale(1.05);
}

/* Wide Awake Taste Profile Themes */
.filter-pill[data-vibe="smooth-sweet"].active {
  background: linear-gradient(135deg, #F1C40F 0%, #E6983B 100%) !important;
  box-shadow: 0 12px 32px rgba(241, 196, 15, 0.35) !important;
}

.filter-pill[data-vibe="light-bright"].active {
  background: linear-gradient(135deg, #FF6B7A 0%, #FF8E53 100%) !important;
  box-shadow: 0 12px 32px rgba(255, 107, 122, 0.35) !important;
}

.filter-pill[data-vibe="complex-expressive"].active {
  background: linear-gradient(135deg, #1ABC9C 0%, #5CBFEE 100%) !important;
  box-shadow: 0 12px 32px rgba(26, 188, 156, 0.35) !important;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .filter-section .filter-group,
  .filter-group {
    margin-bottom: 0 !important;
    padding: 20px;
    border-radius: 16px;
  }
  
  .filter-group-title {
    font-size: 1rem;
    margin-bottom: 16px;
  }
  
  .filter-tabs {
    gap: 8px;
  }
  
  .filter-tab {
    min-width: 110px !important;
    border-radius: 16px !important;
  }
  
  .tab-content {
    padding: 12px 16px !important;
    gap: 8px !important;
  }
  
  .tab-icon {
    width: 16px;
    height: 16px;
  }
  
  .tab-text {
    font-size: 0.8rem;
  }
  
  .tab-count {
    padding: 3px 6px;
    font-size: 0.7rem;
    min-width: 18px;
  }
  
  .compact-filters {
    padding: 16px;
    margin-bottom: 20px;
  }
  
  .filter-pills {
    gap: 8px;
  }
  
  .filter-pill {
    padding: 12px 16px !important;
    font-size: 0.85rem !important;
    gap: 8px !important;
  }
  
  .pill-icon {
    width: 16px;
    height: 16px;
  }
  
  .pill-count {
    padding: 3px 8px;
    font-size: 0.7rem;
  }
}

 